
vendor-prefixes ?= webkit moz o ms official

@import vendor
@import guide
@import mixins


body
  margin 0
  padding 0
  background-color c_text
  color black
  font-size 20px
  font-family montserrat-light
  background-color #dcdcdc

::selection
  color c_text
  background-color c_accent

.clear
  clearfix()

.header
  padding 1em 1em 1em 5em
  background-color c_primary
  color c_text
  border-top 1em solid c_primaryDark
  margin auto
  box-shadow 0 2px 6px rgba(0,0,0,0.2)
  > .hlcopy
    color c_text
    font-size 1.5em
  > .hrcopy
    color c_primaryLight
    font-size 1em

.main
  max-width 1200px
  height 635px
  margin auto
  background-color c_text
  padding 1em 2em

.lcopy
  font-size 1.5em
  color c_primaryText

.rcopy
  font-size 1em
  color c_secondaryText

form.form
  margin auto

.input
  padding 0.5em 1em
  &.focused > .label
    color c_accent
  > .label
    font-size 0.75em
    color c_secondaryText
    transition color 0.5s ease-out

  > input, > textarea
    font-size 1em
    border none
    border-bottom 0.1em solid c_divider
    outline-width 0
    outline none
    margin 0.25em 0 0 0
    padding 0.25em 0
    transition border-bottom 0.5s ease-out
    -webkit-text-fill-color transparent
    text-shadow 0 0 0 c_primaryText
    color c_accent
    width 100%
    resize none
    &:focus
      border-bottom 0.1em solid c_accent

input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder
    color black
    text-shadow none
    -webkit-text-fill-color initial

.button
  cursor pointer
  color c_text
  background-color c_accent
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
  border-radius 2px
  padding 0.5em 1em 0.5em 1em
  text-transform uppercase
  transition box-shadow 0.3s ease-out
  &:hover
    box-shadow 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15)
  &.test
    display inline-block
    margin 1em 2em 0 0
  &.right
    float right
    margin 2em 1em

.footer
  padding 2em
  background-color c_text
  > .company
    float right
    width 60px
    height 60px
    > svg > g > g > path
      fill c_primaryText

@import waves
@import fonts
